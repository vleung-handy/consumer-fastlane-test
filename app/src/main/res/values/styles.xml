        <item name="android:padding">16dp</item>
    </style>

    <style name="EditText.Last">
        <item name="android:background">@drawable/bg_edit_text_last</item>
    </style>

    <style name="EditText.Email">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/email</item>
        <item name="android:maxLength">100</item>
    </style>

    <style name="EditText.Password">
        <item name="android:inputType">textPassword</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/password</item>
        <item name="android:maxLength">100</item>
    </style>

    <style name="EditText.Last.Password">
        <item name="android:inputType">textPassword</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/password</item>
        <item name="android:maxLength">100</item>
    </style>

    <style name="EditText.FirstName">
        <item name="android:inputType">textCapWords</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/name</item>
        <item name="android:maxLength">50</item>
    </style>

    <style name="EditText.FullName">
        <item name="android:inputType">textCapWords</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/full_name</item>
        <item name="android:maxLength">100</item>
    </style>

    <style name="EditText.StreetAddress">
        <item name="android:inputType">textCapWords</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/street_addr</item>
        <item name="android:maxLength">200</item>
