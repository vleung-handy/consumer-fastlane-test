    <style name="EditText.OtherAddress">
        <item name="android:inputType">textPostalAddress</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/apt_num</item>
        <item name="android:maxLength">200</item>
    </style>

    <style name="EditText.Phone">
        <item name="android:inputType">phone</item>
        <item name="android:digits">1234567890</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/phone</item>
        <item name="android:maxLength">100</item>
    </style>

    <style name="EditText.Last.Phone">
        <item name="android:inputType">phone</item>
        <item name="android:digits">1234567890</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/phone</item>
        <item name="android:maxLength">100</item>
    </style>

    <style name="EditText.CreditCard">
        <item name="android:inputType">number</item>
        <item name="android:digits">1234567890</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/credit_card_num</item>
        <item name="android:maxLength">32</item>
    </style>

    <style name="EditText.PromoCodeOpt">
        <item name="android:inputType">textCapCharacters</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/promo_code_opt</item>
        <item name="android:maxLength">100</item>
