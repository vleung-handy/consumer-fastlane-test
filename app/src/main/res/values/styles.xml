<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Base" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="simpleAlertDialogStyle">@style/Theme.SimpleAlertDialog.Light</item>
        <item name="abstractWheelViewStyle">@style/abstractWheelViewStyle</item>
    </style>

    <style name="ContentLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>

    <style name="ContentLayout.NoBottom">
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
    </style>

    <style name="ContentLayoutCell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="Button.Blue">
        <item name="android:background">@drawable/button_blue</item>
        <item name="android:textColor">@drawable/button_text_white</item>
    </style>

    <style name="Button.White">
        <item name="android:background">@drawable/button_white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@drawable/button_text_black</item>
    </style>

    <style name="TextButton.SmallFont">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="FacebookButton" parent="com_facebook_loginview_default_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/facebook</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:freezesText">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black_pressed</item>
    </style>

    <style name="EditText.Email">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/email</item>
        <item name="android:maxLength">100</item>
    </style>

    <style name="EditText.Password">
        <item name="android:inputType">textPassword</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/password</item>
        <item name="android:maxLength">100</item>
    </style>

    <style name="EditText.FullName">
        <item name="android:inputType">textPersonName</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/full_name</item>
        <item name="android:maxLength">100</item>
    </style>

    <style name="EditText.Phone">
        <item name="android:inputType">phone</item>
        <item name="android:digits">1234567890</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/phone</item>
        <item name="android:maxLength">100</item>
    </style>

    <style name="EditText.ZipCode">
        <item name="android:inputType">textPostalAddress</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/zip_code</item>
        <item name="android:maxLength">100</item>
    </style>

    <style name="EditText.Comment">
        <item name="android:freezesText">true</item>
        <item name="android:maxLength">1000</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:freezesText">true</item>
    </style>

    <style name="TextView.XSmall">
        <item name="android:textSize">@dimen/xsmall_text_size</item>
    </style>

    <style name="TextView.Medium">
        <item name="fontPath">fonts/CircularStd-Medium.otf</item>
    </style>

    <style name="TextView.XLarge">
        <item name="android:textSize">@dimen/xlarge_text_size</item>
    </style>

    <style name="TextView.XLarge.Bold">
        <item name="fontPath">fonts/CircularStd-Bold.otf</item>
    </style>

    <style name="TextView.Headline">
        <item name="fontPath">fonts/CircularStd-Medium.otf</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextView.Headline.Blue">
        <item name="android:textColor">@color/handy_blue</item>
    </style>

    <style name="TextView.Headline.Small">
        <item name="fontPath">fonts/CircularStd-Medium.otf</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="TextView.Navbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/nav_bar</item>
        <item name="android:textColor">@color/handy_blue</item>
        <item name="fontPath">fonts/CircularStd-Medium.otf</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="TextView.BookingsHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/handy_bg</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="fontPath">fonts/CircularStd-Medium.otf</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="TextView.BookingOptionInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/xsmall_text_size</item>
        <item name="android:freezesText">false</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="BookingsCell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/booking_cell</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="BookingsCell.End">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ServiceCell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/service_cell</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="TextView.ServiceCategory">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:freezesText">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/handy_blue</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/service_category_cell</item>
        <item name="fontPath">fonts/CircularStd-Medium.otf</item>
    </style>

    <style name="abstractWheelViewStyle" />

</resources>
