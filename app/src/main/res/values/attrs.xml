<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="fontPath"
          format="string"/>

    <declare-styleable name="BasicInputTextView">
        <attr name="minLength"
              format="integer"/>
    </declare-styleable>

    <declare-styleable name="ThinIconButton">
        <attr name="iconResourceId"
              format="reference"/>
    </declare-styleable>
    <declare-styleable name="BookingInstructionView">
        <attr name="prefsState">
            <enum name="requested"
                  value="0"/>
            <enum name="declined"
                  value="1"/>
        </attr>
        <attr name="prefsTitle"
              format="string"/>
        <attr name="prefsText"
              format="string"/>
    </declare-styleable>
    <declare-styleable name="DragAndDropVerticalLinearLayout">
        <attr name="dragAndDropEnabled"
              format="boolean"/>
    </declare-styleable>
    <declare-styleable name="SwipeableViewPager">
        <attr name="swipeable"
              format="boolean"/>
        <attr name="wrap_content_enabled"
              format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ImageToggleButton">
        <attr name="checked_icon"
              format="reference"/>
        <attr name="unchecked_icon"
              format="reference"/>
        <attr name="checked_text"
              format="string"/>
        <attr name="unchecked_text"
              format="string"/>
        <attr name="checked_bg"
              format="reference"/>
        <attr name="unchecked_bg"
              format="reference"/>
        <attr name="ripple_drawable"
              format="reference"/>
    </declare-styleable>

    <!--bottom nav-->
    <declare-styleable name="HandyBottomNavigationView">
        <attr name="itemIconTint"
              format="color"/>
        <attr name="itemTextColor"
              format="color"/>
        <attr name="itemBackground"
              format="reference"/>
        <attr name="menu"
              format="reference"/>
        <attr name="chatIndicatorIndex"
              format="integer"/>
    </declare-styleable>

    <!-- Rating Flow -->
    <declare-styleable name="RatingFlowFiveStarsView">
        <attr name="starWidth"
              format="dimension"/>
        <attr name="starHeight"
              format="dimension"/>
        <attr name="starMargin"
              format="dimension"/>
    </declare-styleable>

    <!--image text action button-->
    <declare-styleable name="ImageTextActionButton">
        <attr name="text"
              format="string"/>
        <attr name="drawable"
              format="reference"/>
        <attr name="drawableTint"
              format="reference"/>
        <attr name="textTint"
              format="color"/>
    </declare-styleable>

    <declare-styleable name="LoadingLayout">
        <attr name="loadingText"
              format="string"/>
    </declare-styleable>
    <declare-styleable name="GameSymbolView">
        <attr name="symbol"
              format="enum">
            <enum name="dustpan"
                  value="0"/>
            <enum name="bucket_green"
                  value="1"/>
            <enum name="handy_logo"
                  value="2"/>
            <enum name="heart"
                  value="3"/>
            <enum name="piggy_bank"
                  value="4"/>
            <enum name="soap_bottle"
                  value="5"/>
            <enum name="star"
                  value="6"/>
        </attr>
    </declare-styleable>
</resources>
