<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="fontPath" format="string" />

    <declare-styleable name="BasicInputTextView">
        <attr name="minLength" format="integer"/>
    </declare-styleable>

    <declare-styleable name="ThinIconButton">
        <attr name="iconResourceId" format="reference" />
    </declare-styleable>
    <declare-styleable name="BookingInstructionView">
        <attr name="prefsState" >
            <enum name="requested" value="0"/>
            <enum name="declined" value="1"/>
        </attr>
        <attr name="prefsTitle" format="string"/>
        <attr name="prefsText" format="string"/>
    </declare-styleable>
    <declare-styleable name="DragAndDropVerticalLinearLayout">
        <attr name="dragAndDropEnabled" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="SwipeableViewPager">
        <attr name="swipeable"
              format="boolean"/>
        <attr name="wrap_content_enabled"
              format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ImageToggleButton">
        <attr name="checked_icon"
              format="reference"/>
        <attr name="unchecked_icon"
              format="reference"/>
        <attr name="checked_text"
              format="string"/>
        <attr name="unchecked_text"
              format="string"/>
        <attr name="checked_bg"
              format="reference"/>
        <attr name="unchecked_bg"
              format="reference"/>
        <attr name="ripple_drawable"
              format="reference"/>
    </declare-styleable>

    <!--bottom nav-->
    <declare-styleable name="HandyBottomNavigationView">
        <attr name="itemIconTint"
              format="color"/>
        <attr name="itemTextColor"
              format="color"/>
        <attr name="itemBackground"
              format="reference"/>
        <attr name="menu"
              format="reference"/>
    </declare-styleable>
</resources>
