<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/default_margin_double"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <RadioGroup
        style="@style/ToggleGroupStyle"
        android:checkedButton="@+id/tip_0"
        android:id="@+id/tip_amount_radio_group"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin">

        <RadioButton
            style="@style/TipToggle.First"
            android:id="@+id/tip_0"
            android:text="@string/no_tip_amount"/>

        <RadioButton
            style="@style/TipToggle"
            android:id="@+id/tip_1"/>

        <RadioButton
            style="@style/TipToggle"
            android:id="@+id/tip_2"/>

        <RadioButton
            style="@style/TipToggle"
            android:id="@+id/tip_3"/>

        <RadioButton
            style="@style/TipToggle.Last"
            android:id="@+id/tip_4"
            android:text="@string/other_tip_amount"/>

    </RadioGroup>

    <LinearLayout
        android:gravity="right"
        android:id="@+id/custom_tip_amount_wrapper"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:visibility="gone">

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:text="@string/tip_amount"
            android:textSize="@dimen/text_size_small"/>

        <EditText
            android:background="@drawable/rounded_border_input"
            android:id="@+id/custom_tip_amount"
            android:inputType="number"
            android:layout_gravity="right|bottom"
            android:layout_height="40dp"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textCursorDrawable="@drawable/handy_cursor"
            android:width="80dp"/>

    </LinearLayout>

</LinearLayout>
