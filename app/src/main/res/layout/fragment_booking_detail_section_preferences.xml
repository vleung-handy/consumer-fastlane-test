<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/handy_bg"
    >

    <com.handybook.handybook.booking.ui.view.BookingDetailSectionView
        android:id="@+id/booking_detail_section_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/BookingDetailSectionView"
        >

        <include layout="@layout/layout_section_separator_view"/>

        <include
            android:id="@+id/entry_title"
            layout="@layout/layout_section_entry_title"
            />

        <include layout="@layout/layout_section_action_text"/>

        <LinearLayout
            android:id="@+id/preferences_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/entry_title"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >

        </LinearLayout>

        <include layout="@layout/layout_section_entry_text"/>

        <include layout="@layout/layout_section_action_buttons"/>


    </com.handybook.handybook.booking.ui.view.BookingDetailSectionView>

</RelativeLayout>