<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/fetch_error_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/handy_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/default_padding"
    android:visibility="gone"
    tools:visibility="visible"
    >

    <TextView
        android:id="@+id/fetch_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/error_fetching_connectivity_issue"
        android:layout_marginBottom="@dimen/default_margin"
        android:textColor="@color/handy_tertiary_gray"
        android:textSize="@dimen/text_size_medium"
        />

    <Button
        android:id="@+id/try_again_button"
        style="@style/Button.BookingAction.Teal.Empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/try_again"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_medium"
        />
</LinearLayout>
