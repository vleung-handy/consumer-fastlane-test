<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@color/handy_white"
    app:cardCornerRadius="@dimen/default_corner_radius"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:contentPadding="0dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/customer_preference_checkbox"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="16dp"
            android:button="@drawable/round_checkbox"
            />

        <TextView
            android:id="@+id/customer_preference_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.3"
            android:textAppearance="@style/TextView.Medium"
            android:textColor="@color/handy_text_black"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            tools:text="Kitchen: trade crucifix yr craft beer. Polaroid pork belly chartreuse salvia distillery pickled. Deep v mixtape brunch, hammock four loko typewriter butcher waistcoat cronut."
            />

    </LinearLayout>
</android.support.v7.widget.CardView>
