<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.referral.ui.ReferralActivity"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Handy.AppBarOverlay"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/fragment_referral_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/Theme.Handy.AppBarOverlay"
            android:title="@string/my_bookings"
            app:contentInsetStart="0dp"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:navigationIcon="@drawable/ic_menu"
            app:titleTextAppearance="@style/Toolbar.TitleText"

            />


    </android.support.design.widget.AppBarLayout>

    <include
        layout="@layout/layout_error"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:visibility="gone"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <LinearLayout
            android:id="@+id/fragment_referral_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/handy_background_gray"
            android:orientation="vertical"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="184dp"
                    android:background="@color/handy_bg"
                    />

                <ImageView
                    android:id="@+id/fragment_referral_image"
                    android:layout_width="248dp"
                    android:layout_height="184dp"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/img_referral_couch"
                    />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_margin_double"
                android:layout_marginStart="@dimen/default_margin_double"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/fragment_referral_title"
                    style="@style/TextView.XLarge.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_double"
                    android:gravity="center_horizontal"
                    tools:text="Earn free cleanings"
                    />

                <TextView
                    android:id="@+id/fragment_referral_subtitle"
                    style="@style/TextView.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:lineSpacingMultiplier="1"
                    tools:text="Sharing is caring, and when you share Handy with a friend, they get $XX off their first booking, and you earn $YY once their first booking is done."
                    />

                <com.handybook.handybook.booking.ui.view.BookingActionButton
                    android:id="@+id/fragment_referral_button_email"
                    style="@style/Button.BookingAction.Green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin"
                    android:drawableLeft="@drawable/ic_email_white"
                    android:drawableStart="@drawable/ic_email_white"
                    android:text="@string/fragment_referral_email_invite"
                    />

                <com.handybook.handybook.booking.ui.view.BookingActionButton
                    android:id="@+id/fragment_referral_button_sms"
                    style="@style/Button.BookingAction.Grey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_half"
                    android:drawableLeft="@drawable/ic_referral_sms_white"
                    android:drawableStart="@drawable/ic_referral_sms_white"
                    android:text="@string/fragment_referral_sms_invite"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_half"
                    android:background="@drawable/bg_rectangle_dotted_white"
                    android:orientation="horizontal"
                    android:padding="@dimen/default_padding"
                    >

                    <TextView
                        style="@style/TextView.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/default_margin_half"
                        android:layout_marginRight="@dimen/default_margin_half"
                        android:text="@string/fragment_referral_copy_invite"
                        android:textColor="@color/light_grey"
                        android:textIsSelectable="false"
                        />

                    <TextView
                        android:id="@+id/fragment_referral_share_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        tools:text="handy.com/annmarie?someextrastuff=whatever_but_long"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/fragment_referral_cta_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_half"
                    android:gravity="center_horizontal"
                    android:text="@string/fragment_referral_more_ways_to_share"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
