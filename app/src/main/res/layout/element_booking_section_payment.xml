<?xml version="1.0" encoding="utf-8"?>
<com.handybook.handybook.ui.widget.BookingDetailSectionPaymentView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/default_padding"
    android:paddingLeft="@dimen/default_padding"
    android:paddingRight="@dimen/default_padding"
    >

    <View
        android:id="@+id/entry_sep"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="20dp"
        android:background="@color/cell_sep"/>

    <TextView
        android:id="@+id/entry_title"
        style="@style/TextView.XSmall.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/entry_sep"
        android:layout_marginBottom="10dp"
        android:text="@string/payment"
        android:textAllCaps="true"
        android:textColor="@color/steel"/>

    <TextView
        android:id="@+id/entry_action_text"
        style="@style/TextView.XSmall.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/entry_sep"
        android:layout_marginBottom="10dp"
        android:gravity="right"
        android:text="XX action text XX"
        android:textAllCaps="true"
        android:textColor="@color/handy_blue"/>

    <RelativeLayout
        android:id="@+id/payment_info_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/entry_title"
        android:layout_marginBottom="3dp">

        <LinearLayout
            android:id="@+id/pay_lines_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pay_lines_section"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView.Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/total"/>

            <TextView
                android:id="@+id/total_text"
                style="@style/TextView.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/entry_text"
        style="@style/TextView.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/payment_info_section"
        android:text="Billed Status"
        android:textColor="@color/black_pressed"/>

    <LinearLayout
        android:id="@+id/action_buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entry_text"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        />

</com.handybook.handybook.ui.widget.BookingDetailSectionPaymentView>
