<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/handy_bg">

    <Button
        android:id="@+id/send_message_button"
        android:text="Send Message"
        style="@style/Button.Green" />

    <FrameLayout
        android:id="@+id/nav_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nav_text"
            android:text="@string/help"
            style="@style/TextView.Navbar" />

        <RelativeLayout
            android:id="@+id/menu_button_layout"
            style="@style/MenuButtonLayout" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/send_message_button"
        android:layout_below="@id/nav_layout"
        >

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="@dimen/default_margin"
            >

            <RelativeLayout
                android:id="@+id/help_header"
                android:layout_width="match_parent"
                android:layout_height="142dp"
                android:gravity="center"
                android:padding="@dimen/default_padding"
                android:background="@drawable/help_header_blue">

                <ImageView
                    android:id="@+id/help_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/ic_help_contact"
                    android:contentDescription="help" />

                <TextView
                    android:id="@+id/help_header_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/help_icon"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="@string/contact_us"
                    style="@style/TextView.Large.Med" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/help_triangle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignBottom="@id/help_header"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:src="@drawable/triangle" />

            <RelativeLayout
                android:id="@+id/info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/help_header"
                android:background="@drawable/cell_booking_last_rounded"
                android:paddingBottom="16dp"
                >

                <RelativeLayout
                    android:id="@+id/name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/name_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_name"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="16dp"/>

                    <com.handybook.handybook.ui.widget.FirstNameInputTextView
                        android:id="@+id/user_name_text"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@id/name_icon"
                        style="@style/EditText.FirstName" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/name_layout"
                    >

                    <ImageView
                        android:id="@+id/email_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_email"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="16dp"/>

                    <com.handybook.handybook.ui.widget.EmailInputTextView
                        android:id="@+id/email_text"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@id/email_icon"
                        style="@style/EditText.Email" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/comment_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_below="@id/email_layout"
                    android:gravity="top"
                    >

                    <ImageView
                        android:id="@+id/comment_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_pencil"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="13dp"
                        />

                    <com.handybook.handybook.ui.widget.BasicInputTextView
                        android:id="@+id/comment_text"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@id/comment_icon"
                        android:hint="@string/ask_us_anything"
                        android:gravity="top"
                        app:minLength="1"
                        style="@style/EditText.Last.Comment" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/nav_options_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/help_header"
                android:orientation="vertical"
                android:background="@android:color/transparent"
                android:visibility="gone" />

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>
