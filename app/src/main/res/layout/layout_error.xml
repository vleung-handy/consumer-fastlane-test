<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/error_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_empty_state"
        />

    <TextView
        android:id="@+id/error_text"
        style="@style/TextView.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_double"
        android:gravity="center"
        android:textColor="@color/handy_tertiary_gray"
        tools:text="Sorry, something bad must have happened!"
        />

    <Button
        android:id="@+id/error_retry_button"
        style="@style/Button.Green.Round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/try_again"
        android:textAllCaps="false"
        />

</LinearLayout>
