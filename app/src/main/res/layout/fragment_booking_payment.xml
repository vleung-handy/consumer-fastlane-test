<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/handy_bg">

    <Button
        android:id="@+id/next_button"
        android:text="@string/complete_booking"
        style="@style/Button.Green" />

    <TextView
        android:id="@+id/nav_text"
        android:text="@string/payment"
        style="@style/TextView.Navbar" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/next_button"
        android:layout_below="@id/nav_text">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <FrameLayout
                android:id="@+id/info_header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_padding" />

            <FrameLayout
                android:id="@+id/android_pay_button_layout"
                android:visibility="gone"
                android:layout_height="48dp"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/default_margin_double"
                android:layout_below="@+id/info_payment_layout" />

            <LinearLayout
                android:id="@+id/info_payment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/info_header_layout"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/card_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/default_padding"
                        android:paddingRight="0dp"
                        android:paddingStart="@dimen/default_padding"
                        android:paddingEnd="0dp"
                        android:paddingBottom="@dimen/default_padding"
                        android:paddingTop="@dimen/default_padding"
                        android:src="@drawable/ic_card_blank"
                        android:background="@drawable/bg_edit_text"
                        android:contentDescription="@string/credit_card" />

                    <com.handybook.handybook.ui.widget.CreditCardNumberInputTextView
                        android:id="@+id/credit_card_text"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        style="@style/EditText.CreditCard" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/default_padding"
                        android:paddingEnd="@dimen/default_padding"
                        android:paddingLeft="0dp"
                        android:paddingStart="0dp"
                        android:background="@drawable/bg_edit_text">

                        <Button
                            android:id="@+id/change_button"
                            android:layout_gravity="center"
                            android:text="@string/change"
                            style="@style/RoundedButton" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/card_extras_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.handybook.handybook.ui.widget.CreditCardExpDateInputTextView
                        android:id="@+id/exp_text"
                        android:layout_weight="1"
                        style="@style/EditText.CreditCardExp" />

                    <com.handybook.handybook.ui.widget.CreditCardCVCInputTextView
                        android:id="@+id/cvc_text"
                        android:layout_weight="1"
                        style="@style/EditText.CreditCardCVC" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_edit_text">

                        <ImageView
                            android:id="@+id/lock_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/default_padding"
                            android:paddingEnd="@dimen/default_padding"
                            android:paddingLeft="0dp"
                            android:paddingStart="0dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_lock"
                            android:contentDescription="lock" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/promo_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_margin"
                    android:orientation="horizontal">

                    <com.handybook.handybook.ui.widget.FreezableInputTextView
                        android:id="@+id/promo_text"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        style="@style/EditText.Last.PromoCodeOpt" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/default_padding"
                        android:paddingEnd="@dimen/default_padding"
                        android:paddingLeft="0dp"
                        android:paddingStart="0dp"
                        android:background="@drawable/bg_edit_text_last">

                        <Button
                            android:id="@+id/promo_button"
                            android:text="@string/apply"
                            android:layout_gravity="center"
                            style="@style/RoundedButton" />

                        <ProgressBar
                            android:id="@+id/promo_progress"
                            android:layout_gravity="center"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:visibility="visible" />

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
