<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/handy_white">

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:id="@+id/s_center"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/handy_light_grey"
        android:layout_above="@+id/s_center">
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_blocking_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/img_modal_blocking_screen"
        android:layout_above="@+id/s_center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-20dp"/>

    <TextView
        android:id="@+id/tv_modal_blocking_title"
        fontPath="fonts/CircularStd-Bold.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Oh no! Your app\nis out of date."
        tools:ignore="MissingPrefix"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/iv_blocking_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="@color/handy_dark_grey"
        android:textSize="26sp"
        android:textIsSelectable="false"
        android:lineSpacingMultiplier="1.2"/>

    <TextView
        android:id="@+id/tv_modal_blocking_subtitle"
        fontPath="fonts/CircularStd-Bold.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="We got some great improvements\ninthe new one. Check it out!"
        tools:ignore="MissingPrefix"
        android:layout_below="@+id/tv_modal_blocking_title"
        android:layout_centerHorizontal="true"
        android:textColor="@color/handy_dark_grey"
        android:textSize="18dp"
        android:textIsSelectable="true"
        android:lineSpacingMultiplier="1.3"
        />

    <Button
        android:id="@+id/b_update_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/handy_blue"
        android:text="Update Now"
        android:textColor="@color/white"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
