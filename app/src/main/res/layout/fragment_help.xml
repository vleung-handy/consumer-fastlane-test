<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/handy_bg">

    <FrameLayout
        android:id="@+id/nav_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nav_text"
            android:text="@string/help"
            style="@style/TextView.Navbar" />

        <RelativeLayout
            android:id="@+id/menu_button_layout"
            style="@style/MenuButtonLayout" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nav_layout">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="@dimen/default_margin">

            <FrameLayout
                android:id="@+id/help_header"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/help_header">

                <TextView
                    android:id="@+id/help_header_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:text="@string/what_need_help_with"
                    style="@style/TextView.Large.Med" />

            </FrameLayout>

            <TextView
                android:id="@+id/info_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/help_header"
                android:padding="@dimen/default_padding"
                android:background="@color/white"
                style="@style/TextView" />


            <LinearLayout
                android:id="@+id/nav_options_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/help_header"
                android:orientation="vertical"
                android:background="@android:color/transparent"
                android:visibility="gone" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
