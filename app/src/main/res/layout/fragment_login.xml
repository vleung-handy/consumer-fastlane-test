<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/handy_bg">

    <Button
        android:id="@+id/login_button"
        android:text="@string/log_in"
        style="@style/Button.Blue" />

    <RelativeLayout
        android:layout_above="@id/login_button"
        style="@style/ContentLayout.NoBottom">

        <com.facebook.widget.LoginButton
            android:id="@+id/fb_button"
            style="@style/FacebookButton" />

        <TextView
            android:id="@+id/or_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fb_button"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/or"
            style="@style/TextView" />

        <com.handybook.handybook.EmailInputTextView
            android:id="@+id/email_text"
            android:layout_below="@id/or_text"
            style="@style/EditText.Email" />

        <com.handybook.handybook.PasswordInputTextView
            android:id="@+id/password_text"
            android:layout_below="@id/email_text"
            style="@style/EditText.Password" />

        <Button
            android:id="@+id/forgot_button"
            android:layout_below="@id/password_text"
            android:layout_centerHorizontal="true"
            android:text="@string/forgot_password"
            style="@style/TextButton.SmallFont" />

    </RelativeLayout>

</RelativeLayout>
