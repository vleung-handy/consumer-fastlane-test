<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/handy_bg">

    <RelativeLayout
        android:id="@+id/nav_layout"
        style="@style/RelativeLayout.NavBar.Blue"
        >

        <RelativeLayout
            android:id="@+id/menu_button_layout"
            style="@style/MenuButtonLayout"
            />

        <TextView
            android:id="@+id/nav_text"
            style="@style/TextView.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/menu_button_layout"
            android:text="@string/log_in"
            android:textColor="@color/handy_white"
            android:textSize="@dimen/text_size_large"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/login_button"
        android:text="@string/log_in"
        style="@style/Button.Green" />

    <ScrollView
        android:id="@+id/login_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nav_layout"
        android:layout_above="@id/login_button">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/default_padding">

            <RelativeLayout
                android:id="@+id/fb_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <com.facebook.login.widget.LoginButton
                    android:id="@+id/fb_login_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="18sp"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/or_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fb_layout"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:paddingRight="@dimen/default_padding"
                android:paddingLeft="@dimen/default_padding"
                android:gravity="center"
                android:text="@string/or"
                style="@style/TextView" />

            <TextView
                android:id="@+id/welcome_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/or_text"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="@string/welcome_back"
                android:visibility="gone"
                style="@style/TextView" />

            <com.handybook.handybook.core.ui.widget.EmailInputTextView
                android:id="@+id/email_text"
                android:layout_below="@id/welcome_text"
                style="@style/EditText.Email" />

            <com.handybook.handybook.core.ui.widget.PasswordInputTextView
                android:id="@+id/password_text"
                android:layout_below="@id/email_text"
                style="@style/EditText.Password" />

            <Button
                android:id="@+id/forgot_button"
                android:layout_below="@id/password_text"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin"
                android:text="@string/forgot_password"
                style="@style/TextButton.SmallFont" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
