<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/text_start_soon_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your booking starts soon"
        android:visibility="gone"
        tools:visibility="visible"
        android:padding="@dimen/default_padding"
        android:drawableLeft="@drawable/green_dot"
        android:drawablePadding="@dimen/default_padding_half"
        />

    <!--Profile card-->
    <RelativeLayout
        android:id="@+id/profile_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding"
        >

        <TextView
            android:id="@+id/text_provider_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Linda F."
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            style="@style/TextAppearance.AppCompat.Title"
            />

        <ImageView
            android:id="@+id/image_text"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_text"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/image_call"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_call"
            android:layout_toLeftOf="@id/image_text"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/handy_divider_line"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        />

    <include layout="@layout/layout_booking_list_item"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/handy_divider_line"
        />

    <Button
        android:id="@+id/button_report_issue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/report_an_issue"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:textAllCaps="false"
        android:layout_marginLeft="@dimen/default_margin"
        />
</LinearLayout>
