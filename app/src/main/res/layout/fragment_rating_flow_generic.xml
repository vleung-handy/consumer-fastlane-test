<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_padding"
    >

    <TextView
        android:id="@+id/rating_flow_section_title"
        style="@style/TextView.Large.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:gravity="center"
        tools:text="Would you like to work with Jennifer again?"
        />

    <TextView
        android:id="@+id/rating_flow_section_subtitle"
        style="@style/TextView.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_half"
        android:gravity="center"
        android:visibility="gone"
        tools:text="Select all that apply"
        tools:visibility="visible"
        />

    <FrameLayout
        android:id="@+id/rating_flow_section_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        />

</LinearLayout>
