<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:id="@+id/particle_emitter_a"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/particle_emitter_e"
        app:layout_constraintLeft_toRightOf="@+id/particle_emitter_e"
        app:layout_constraintRight_toLeftOf="@+id/particle_emitter_d"
        />

    <View
        android:id="@+id/particle_emitter_b"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/particle_emitter_d"
        app:layout_constraintLeft_toRightOf="@+id/particle_emitter_d"
        app:layout_constraintRight_toRightOf="parent"
        />

    <View
        android:id="@+id/particle_emitter_c"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/particle_emitter_e"
        tools:layout_editor_absoluteY="0dp"
        />

    <View
        android:id="@+id/particle_emitter_d"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/particle_emitter_a"
        app:layout_constraintLeft_toRightOf="@+id/particle_emitter_a"
        app:layout_constraintRight_toLeftOf="@+id/particle_emitter_b"
        />

    <View
        android:id="@+id/particle_emitter_e"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/particle_emitter_c"
        app:layout_constraintLeft_toRightOf="@+id/particle_emitter_c"
        app:layout_constraintRight_toLeftOf="@+id/particle_emitter_a"
        />


    <ImageView
        android:id="@+id/rfgf_image"
        android:layout_width="339dp"
        android:layout_height="379dp"
        android:background="@drawable/img_scratch_off_window_clean"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.handybook.handybook.vegas.ui.view.GameSymbolView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:symbol="bucket_green"
        />

    <com.handybook.handybook.vegas.ui.view.GameSymbolView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:symbol="dustpan"
        />

    <com.handybook.handybook.vegas.ui.view.GameSymbolView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:symbol="piggy_bank"
        />

    <com.handybook.handybook.vegas.ui.view.GameSymbolView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:symbol="heart"
        />

    <com.handybook.handybook.vegas.ui.view.ScratchView
        android:id="@+id/rfgf_scratch_view"
        android:layout_width="339dp"
        android:layout_height="379dp"
        app:layout_constraintLeft_toLeftOf="@+id/rfgf_image"
        app:layout_constraintRight_toRightOf="@+id/rfgf_image"
        app:layout_constraintTop_toTopOf="@+id/rfgf_image"
        />

    <Button
        android:id="@+id/rfgf_reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        />

    <Button
        android:id="@+id/rfgf_blast_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blast"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        />

    <TextView
        android:id="@+id/rfgf_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/rfgf_reset_button"
        app:layout_constraintRight_toLeftOf="@+id/rfgf_blast_button"
        tools:text="0%"
        />


</android.support.constraint.ConstraintLayout>
