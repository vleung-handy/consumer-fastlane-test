<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:paddingTop="@dimen/default_padding_half"
                android:paddingBottom="@dimen/default_padding_half"
                android:paddingRight="@dimen/default_padding_half"
                android:paddingLeft="@dimen/default_padding_quarter"
    >
    <ImageView
        android:id="@+id/conversation_unread_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/unread_indicator"
        android:visibility="invisible"
        tools:visibility="visible"
        />

    <android.support.v4.widget.Space
        android:id="@+id/space"
        android:layout_width="@dimen/default_padding_quarter"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/conversation_unread_indicator"
        android:layout_centerVertical="true"
        />

    <RelativeLayout
        android:id="@+id/conversation_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/space"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/conversation_image_profile"
            android:layout_width="@dimen/mini_pro_profile_image_size"
            android:layout_height="@dimen/mini_pro_profile_image_size"
            app:civ_border_color="@color/handy_divider_line"
            app:civ_border_width="1dp"
            tools:src="@drawable/img_pro_placeholder"
            android:contentDescription="Pro Team Image"
            />

        <FrameLayout
            android:id="@+id/conversation_heart_container"
            android:layout_width="@dimen/mini_pro_profile_pro_team_indicator_container_size_small"
            android:layout_height="@dimen/mini_pro_profile_pro_team_indicator_container_size_small"
            android:layout_alignEnd="@id/conversation_image_profile"
            android:layout_alignRight="@id/conversation_image_profile"
            android:background="@drawable/bg_circle_white"
            android:visibility="gone"
            tools:visibility="visible"
            >

            <ImageView
                android:layout_width="@dimen/mini_pro_profile_pro_team_indicator_size_small"
                android:layout_height="@dimen/mini_pro_profile_pro_team_indicator_size_small"
                android:layout_gravity="center"
                android:src="@drawable/ic_heart_small"
                />

        </FrameLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/conversation_avatar"
        android:layout_toRightOf="@id/conversation_avatar"
        >

        <TextView
            android:id="@+id/conversation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:textSize="@dimen/text_size_large"
            tools:text="Jennifer C."
            android:includeFontPadding="false"
            />

        <TextView
            android:id="@+id/conversation_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/conversation_title"
            android:layout_marginEnd="@dimen/default_margin_double"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin_double"
            android:layout_marginStart="@dimen/default_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/handy_text_black"
            tools:text="Hi, I can't come on friday this week, but I can do it next week"
            android:includeFontPadding="false"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/conversation_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/handy_tertiary_gray"
        android:textSize="@dimen/text_size_xsmall"
        tools:text="Now"
        />
</RelativeLayout>
