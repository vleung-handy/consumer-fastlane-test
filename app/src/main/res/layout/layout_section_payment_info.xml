<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       tools:showIn="@layout/view_booking_detail_section_payment"
    >

    <RelativeLayout
        android:id="@+id/payment_info_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/entry_title"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        tools:showIn="@layout/view_booking_detail_section_payment"
        >

        <LinearLayout
            android:id="@+id/pay_lines_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:orientation="vertical"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pay_lines_section"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/TextView.Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/total"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right"
                >

                <TextView
                    android:id="@+id/total_text"
                    style="@style/TextView.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="$0"
                    />

                <TextView
                    android:layout_marginTop="@dimen/default_margin_quarter"
                    android:id="@+id/total_price_sub_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="*includes VAT"
                    style="@style/TextView.XSmall"
                    android:textColor="@color/handy_tertiary_gray"
                    android:visibility="gone"
                    tools:visibility="visible"
                    />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</merge>


