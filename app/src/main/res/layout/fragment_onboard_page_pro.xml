<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_logo_onboard"
        android:layout_marginTop="32dp"
        android:contentDescription="logo"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_onboard_pro"
        android:layout_marginTop="40dp"
        android:contentDescription="logo"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="24dp"
        android:paddingLeft="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/onboard_msg_pro"
        android:textColor="@color/white"
        style="@style/TextView.XLarge.Bold" />

    <RelativeLayout
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-72dp"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/image_pro_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_pro_match_1"
            android:contentDescription="image" />

        <ImageView
            android:id="@+id/image_pro_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp"
            android:layout_below="@id/image_pro_1"
            android:src="@drawable/img_pro_match_2"
            android:contentDescription="image" />

        <ImageView
            android:id="@+id/image_pro_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp"
            android:layout_below="@id/image_pro_2"
            android:src="@drawable/img_pro_match_3"
            android:contentDescription="image" />

        <ImageView
            android:id="@+id/image_pro_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp"
            android:layout_below="@id/image_pro_3"
            android:src="@drawable/img_pro_match_4"
            android:contentDescription="image" />

    </RelativeLayout>

</RelativeLayout>
