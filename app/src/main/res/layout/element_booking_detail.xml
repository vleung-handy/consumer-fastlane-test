<?xml version="1.0" encoding="utf-8"?>
<com.handybook.handybook.ui.view.BookingDetailView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/handy_bg">

    <RelativeLayout
        android:id="@+id/nav"
        style="@style/TextView.Navbar">

        <TextView
            android:id="@+id/nav_text"
            style="@style/TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="Service"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/booking_text"
            style="@style/TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nav_text"
            android:gravity="center"
            android:singleLine="true"
            android:text="Service"
            android:textColor="@color/black_pressed"
            android:textSize="12sp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nav">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/date_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingLeft="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/date_text"
                    style="@style/TextView.XLarge.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="Date"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/time_text"
                    style="@style/TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/date_text"
                    android:text="Time"/>

                <LinearLayout
                    android:id="@+id/freq_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time_text"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_recur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_recurring"/>

                    <TextView
                        android:id="@+id/freq_text"
                        style="@style/TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:text="Freq"
                        android:textColor="@color/steel"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/section_fragment_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_section"
                android:orientation="vertical"
                />

            <View
                android:id="@+id/end_sep"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/section_fragment_container"
                android:background="@color/nav_sep"/>

            <!--empty view needed for bottom layout margin bug on older APIs-->
            <View
                android:id="@+id/end_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/end_sep"/>

            <RelativeLayout
                android:id="@+id/options_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/end_view"
                android:background="@color/handy_bg"
                android:paddingBottom="16dp"
                android:paddingTop="15dp">

                <Button
                    android:id="@+id/reschedule_button"
                    style="@style/Button.Blue"
                    android:layout_alignParentBottom="false"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:text="@string/reschedule"/>

                <Button
                    android:id="@+id/cancel_button"
                    style="@style/Button.Grey"
                    android:layout_alignParentBottom="false"
                    android:layout_below="@id/reschedule_button"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:layout_marginTop="10dp"
                    android:text="@string/cancel_booking"/>

            </RelativeLayout>








        </RelativeLayout>

    </ScrollView>

</com.handybook.handybook.ui.view.BookingDetailView>
