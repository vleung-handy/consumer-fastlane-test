<?xml version="1.0" encoding="utf-8"?>
<com.handybook.handybook.ui.view.BookingDetailView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/handy_bg"
    tools:showIn="@layout/fragment_booking_detail">

    <RelativeLayout
        android:id="@+id/nav_bar"
        style="@style/RelativeLayout.NavBar">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_chevron"
            android:scaleX="-1"
            android:background="@color/transparent"
            android:layout_marginLeft="@dimen/default_margin"
            android:padding="8dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/nav_text"
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Service Name"
            android:textSize="18sp"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/back_button"/>

        <TextView
            android:id="@+id/booking_text"
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nav_text"
            android:gravity="center"
            android:singleLine="true"
            android:text="#1000"
            android:textColor="@color/black_pressed"
            android:textSize="12sp"
            android:layout_alignParentLeft="false"
            android:layout_alignLeft="@+id/nav_text"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nav_bar"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            >

            <FrameLayout
                android:id="@+id/frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                >

                <RelativeLayout
                    android:id="@+id/date_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/service_icon"
                    android:background="@color/white"
                    android:paddingBottom="20dp"
                    android:paddingLeft="@dimen/default_padding"
                    android:paddingRight="@dimen/default_padding"
                    android:paddingTop="40dp"
                    >

                    <TextView
                        android:id="@+id/date_text"
                        style="@style/TextView.XLarge.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="3dp"
                        android:text="Long Date Goes Here"
                        android:textSize="24sp"
                        />

                    <TextView
                        android:id="@+id/time_text"
                        style="@style/TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/date_text"
                        android:layout_centerHorizontal="true"
                        android:text="Long Time"
                        />

                    <LinearLayout
                        android:id="@+id/freq_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/time_text"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/icon_recur"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_recurring"
                            android:scaleX="-1"/>

                        <TextView
                            android:id="@+id/freq_text"
                            style="@style/TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginStart="4dp"
                            android:text="Freq"
                            android:textColor="@color/steel"/>

                    </LinearLayout>

                </RelativeLayout>


            </FrameLayout>

            <com.handybook.handybook.ui.widget.ServiceIconImageView
                android:id="@+id/service_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_clean_fill"/>

            <LinearLayout
                android:id="@+id/section_fragment_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frame"
                android:orientation="vertical"
                />

            <!--empty view needed for bottom layout margin bug on older APIs-->
            <View
                android:id="@+id/end_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/section_fragment_container"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/end_view"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_booking_detail_logo"
                android:layout_marginTop="16dp"/>


        </RelativeLayout>

    </ScrollView>

</com.handybook.handybook.ui.view.BookingDetailView>
