<?xml version="1.0" encoding="utf-8"?>
<com.handybook.handybook.ui.view.BookingDetailView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/handy_bg">

    <RelativeLayout
        android:id="@+id/nav"
        style="@style/TextView.Navbar">

        <TextView
            android:id="@+id/nav_text"
            style="@style/TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="Service"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/booking_text"
            style="@style/TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nav_text"
            android:gravity="center"
            android:singleLine="true"
            android:text="Service"
            android:textColor="@color/black_pressed"
            android:textSize="12sp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nav">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/date_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingLeft="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/date_text"
                    style="@style/TextView.XLarge.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="Date"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/time_text"
                    style="@style/TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/date_text"
                    android:text="Time"/>

                <LinearLayout
                    android:id="@+id/freq_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time_text"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_recur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_recurring"/>

                    <TextView
                        android:id="@+id/freq_text"
                        style="@style/TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:text="Freq"
                        android:textColor="@color/steel"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pro_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_section"
                android:paddingBottom="20dp"
                android:paddingLeft="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding">

                <View
                    android:id="@+id/pro_sep"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="20dp"
                    android:background="@color/cell_sep"/>

                <TextView
                    android:id="@+id/pro_title"
                    style="@style/TextView.XSmall.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pro_sep"
                    android:layout_marginBottom="10dp"
                    android:text="@string/professional"
                    android:textAllCaps="true"
                    android:textColor="@color/steel"/>

                <TextView
                    android:id="@+id/pro_text"
                    style="@style/TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pro_title"
                    android:text="Professional"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/laundry_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pro_section"
                android:paddingBottom="20dp"
                android:paddingLeft="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding">

                <View
                    android:id="@+id/laundry_sep"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="20dp"
                    android:background="@color/cell_sep"/>

                <TextView
                    android:id="@+id/laundry_title"
                    style="@style/TextView.XSmall.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/laundry_sep"
                    android:layout_marginBottom="10dp"
                    android:text="@string/dry_cleaning_laundry"
                    android:textAllCaps="true"
                    android:textColor="@color/steel"/>

                <TextView
                    android:id="@+id/laundry_text"
                    style="@style/TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/laundry_title"
                    android:text="@string/pickup_occur"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/entry_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/laundry_section"
                android:paddingBottom="20dp"
                android:paddingLeft="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding">

                <View
                    android:id="@+id/entry_sep"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="20dp"
                    android:background="@color/cell_sep"/>

                <TextView
                    android:id="@+id/entry_title"
                    style="@style/TextView.XSmall.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/entry_sep"
                    android:layout_marginBottom="10dp"
                    android:text="@string/entry_info"
                    android:textAllCaps="true"
                    android:textColor="@color/steel"/>

                <TextView
                    android:id="@+id/entry_text"
                    style="@style/TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/entry_title"
                    android:text="Entry Info"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pro_note_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/entry_section"
                android:paddingBottom="20dp"
                android:paddingLeft="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding">

                <View
                    android:id="@+id/pro_note_sep"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="20dp"
                    android:background="@color/cell_sep"/>

                <TextView
                    android:id="@+id/pro_note_title"
                    style="@style/TextView.XSmall.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pro_note_sep"
                    android:layout_marginBottom="10dp"
                    android:text="@string/pro_note"
                    android:textAllCaps="true"
                    android:textColor="@color/steel"/>

                <TextView
                    android:id="@+id/pro_note_text"
                    style="@style/TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pro_note_title"
                    android:text="Note"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/extras_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pro_note_section"
                android:paddingBottom="20dp"
                android:paddingLeft="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding">

                <View
                    android:id="@+id/extras_sep"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="20dp"
                    android:background="@color/cell_sep"/>

                <TextView
                    android:id="@+id/extras_title"
                    style="@style/TextView.XSmall.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/extras_sep"
                    android:layout_marginBottom="10dp"
                    android:text="@string/extras"
                    android:textAllCaps="true"
                    android:textColor="@color/steel"/>

                <TextView
                    android:id="@+id/extras_text"
                    style="@style/TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/extras_title"
                    android:text="Extras"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/addr_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/extras_section"
                android:paddingBottom="20dp"
                android:paddingLeft="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding">

                <View
                    android:id="@+id/addr_sep"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="20dp"
                    android:background="@color/cell_sep"/>

                <TextView
                    android:id="@+id/addr_title"
                    style="@style/TextView.XSmall.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/addr_sep"
                    android:layout_marginBottom="10dp"
                    android:text="@string/address"
                    android:textAllCaps="true"
                    android:textColor="@color/steel"/>

                <TextView
                    android:id="@+id/addr_text"
                    style="@style/TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/addr_title"
                    android:text="Address"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/payment_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addr_section"
                android:paddingBottom="20dp"
                android:paddingLeft="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding">

                <View
                    android:id="@+id/payment_sep"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="20dp"
                    android:background="@color/cell_sep"/>

                <TextView
                    android:id="@+id/payment_title"
                    style="@style/TextView.XSmall.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/payment_sep"
                    android:layout_marginBottom="10dp"
                    android:text="@string/payment"
                    android:textAllCaps="true"
                    android:textColor="@color/steel"/>

                <RelativeLayout
                    android:id="@+id/payment_info_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/payment_title"
                    android:layout_marginBottom="3dp">

                    <LinearLayout
                        android:id="@+id/pay_lines_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pay_lines_section"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextView.Bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/total"/>

                        <TextView
                            android:id="@+id/total_text"
                            style="@style/TextView.Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0"/>

                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/billed_text"
                    style="@style/TextView.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/payment_info_section"
                    android:text="Billed Status"
                    android:textColor="@color/black_pressed"/>

            </RelativeLayout>

            <View
                android:id="@+id/end_sep"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/payment_section"
                android:background="@color/nav_sep"/>

            <!--empty view needed for bottom layout margin bug on older APIs-->
            <View
                android:id="@+id/end_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/end_sep"/>

            <RelativeLayout
                android:id="@+id/options_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/end_view"
                android:background="@color/handy_bg"
                android:paddingBottom="16dp"
                android:paddingTop="15dp">

                <Button
                    android:id="@+id/reschedule_button"
                    style="@style/Button.Blue"
                    android:layout_alignParentBottom="false"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:text="@string/reschedule"/>

                <Button
                    android:id="@+id/cancel_button"
                    style="@style/Button.Grey"
                    android:layout_alignParentBottom="false"
                    android:layout_below="@id/reschedule_button"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:layout_marginTop="10dp"
                    android:text="@string/cancel_booking"/>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</com.handybook.handybook.ui.view.BookingDetailView>
