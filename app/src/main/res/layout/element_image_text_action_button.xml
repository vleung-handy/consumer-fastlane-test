<?xml version="1.0" encoding="utf-8"?>
<!--CTA button supporting image and text. specific to this app-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:padding="@dimen/default_padding_half"
              android:gravity="center"
              android:layout_gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/element_image_text_action_button_image_view"
        android:layout_width="@dimen/pro_profile_action_button_image_size"
        android:layout_height="@dimen/pro_profile_action_button_image_size"
        tools:src="@drawable/ic_action_button_message"
        />
    <TextView
        android:id="@+id/element_image_text_action_button_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextView.Small"
        android:textColor="@color/handy_darkened_blue"
        tools:text="Action"
        />
</LinearLayout>