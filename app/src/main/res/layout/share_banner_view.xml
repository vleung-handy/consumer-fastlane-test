<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/default_padding_half"
                android:paddingBottom="@dimen/default_padding_half"
                android:paddingLeft="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding"
                android:layout_gravity="start"
    >

    <TextView
        android:id="@+id/share_banner_title_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_banner_title_message"
        style="@style/TextView.Medium"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_referral_gift"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
</RelativeLayout>
