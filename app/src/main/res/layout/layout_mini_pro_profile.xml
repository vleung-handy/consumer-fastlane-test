<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:id="@+id/mini_pro_profile_image_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_margin_half"
        android:layout_marginLeft="@dimen/default_margin_half"
        android:layout_marginRight="@dimen/default_margin_half"
        android:layout_marginStart="@dimen/default_margin_half"
        android:paddingBottom="@dimen/default_padding_half"
        android:paddingTop="@dimen/default_padding_half"
        android:visibility="gone"
        tools:visibility="visible"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mini_pro_profile_image"
            android:layout_width="@dimen/mini_pro_profile_image_size"
            android:layout_height="@dimen/mini_pro_profile_image_size"
            app:civ_border_color="@color/handy_divider_line"
            app:civ_border_width="1dp"
            tools:src="@drawable/img_pro_placeholder"
            />

        <FrameLayout
            android:id="@+id/mini_pro_profile_pro_team_indicator_image"
            android:layout_width="@dimen/mini_pro_profile_pro_team_indicator_container_size_small"
            android:layout_height="@dimen/mini_pro_profile_pro_team_indicator_container_size_small"
            android:layout_alignEnd="@id/mini_pro_profile_image"
            android:layout_alignRight="@id/mini_pro_profile_image"
            android:background="@drawable/bg_circle_white"
            android:visibility="gone"
            tools:visibility="visible"
            >

            <ImageView
                android:layout_width="@dimen/mini_pro_profile_pro_team_indicator_size_small"
                android:layout_height="@dimen/mini_pro_profile_pro_team_indicator_size_small"
                android:layout_gravity="center"
                android:src="@drawable/ic_heart_small"
                />

        </FrameLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/default_margin_half"
        android:layout_marginStart="@dimen/default_margin_half"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/mini_pro_profile_title"
                style="@style/TextView.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Jonathan P."
                />

            <ImageView
                android:id="@+id/mini_pro_profile_pro_team_indicator_name"
                android:layout_width="@dimen/mini_pro_profile_pro_team_indicator_size"
                android:layout_height="@dimen/mini_pro_profile_pro_team_indicator_size"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/default_margin_half"
                android:layout_marginStart="@dimen/default_margin_half"
                android:src="@drawable/ic_heart_medium"
                android:visibility="gone"
                tools:visibility="visible"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mini_pro_profile_rating_and_jobs_count_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_quarter"
            android:background="@drawable/pill_white"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/pro_team_average_rating_star_margin"
            android:paddingLeft="@dimen/pro_team_average_rating_star_margin"
            android:paddingRight="@dimen/pro_team_average_rating_star_margin"
            android:paddingStart="@dimen/pro_team_average_rating_star_margin"
            android:visibility="gone"
            tools:visibility="visible"
            >

            <ImageView
                android:layout_width="@dimen/mini_pro_profile_star_size_small"
                android:layout_height="@dimen/mini_pro_profile_star_size_small"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/pro_team_average_rating_star_margin_small"
                android:layout_marginTop="@dimen/pro_team_average_rating_star_margin_small"
                android:contentDescription="@string/cd.pro_team_star"
                android:src="@drawable/ic_star"
                />

            <TextView
                android:id="@+id/mini_pro_profile_rating"
                style="@style/TextView.XSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pro_team_average_rating_star_margin_small"
                android:layout_marginLeft="@dimen/pro_team_average_rating_star_margin_small"
                android:layout_marginStart="@dimen/pro_team_average_rating_star_margin_small"
                android:layout_marginTop="@dimen/pro_team_average_rating_star_margin_small"
                android:gravity="center"
                android:paddingEnd="@dimen/default_margin_quarter"
                android:paddingRight="@dimen/default_margin_quarter"
                android:textColor="@color/handy_tertiary_gray"
                tools:text="4.5"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/handy_dark_divider_line"
                />

            <TextView
                android:id="@+id/mini_pro_profile_jobs_count"
                style="@style/TextView.XSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pro_team_average_rating_star_margin_small"
                android:layout_marginLeft="@dimen/pro_team_average_rating_star_margin_small"
                android:layout_marginStart="@dimen/pro_team_average_rating_star_margin_small"
                android:layout_marginTop="@dimen/pro_team_average_rating_star_margin_small"
                android:gravity="center"
                android:paddingLeft="@dimen/default_margin_quarter"
                android:paddingStart="@dimen/default_margin_quarter"
                android:textColor="@color/handy_tertiary_gray"
                tools:text="1,234 jobs"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
