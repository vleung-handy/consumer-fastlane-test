<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/persistent_promo_expanded_header_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:adjustViewBounds="true"
            android:gravity="center"
            tools:src="@drawable/ic_envelope"
            />

        <LinearLayout
            android:id="@+id/persistent_promo_expanded_text_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/default_padding_double"
            >

            <TextView
                android:id="@+id/persistent_promo_expanded_title"
                style="@style/TextView.XLarge.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                tools:text="Get 20% off furniture assembly today!"
                />

            <TextView
                android:id="@+id/persistent_promo_expanded_subtitle"
                style="@style/TextView.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_half"
                android:gravity="center"
                tools:text="Get ready for a care-free summer. Get 20% off handymen services. Limited time only."
                />
        </LinearLayout>

        <Button
            android:id="@+id/persistent_promo_expanded_action_button"
            style="@style/Button.Green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/default_margin_half"
            android:layout_weight="0"
            android:background="@drawable/button_green"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_large"
            tools:text="Action text"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/persistent_promo_expanded_dismiss_button"
        android:layout_width="@dimen/default_icon_size"
        android:layout_height="@dimen/default_icon_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/default_margin"
        android:padding="@dimen/icon_padding"
        android:src="@drawable/ic_x_white"
        android:tint="@color/light_grey_trans"
        />

</RelativeLayout>
