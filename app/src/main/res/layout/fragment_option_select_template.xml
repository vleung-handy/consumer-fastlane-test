<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:background="@color/handy_bg"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

    <Button
        style="@style/Button.Green"
        android:id="@+id/next_button"
        android:onClick="onSaveButtonPressed"
        android:text="@string/save"/>

    <!--<TextView-->
        <!--style="@style/TextView.Navbar"-->
        <!--android:id="@+id/nav_text"-->
        <!--tools:text="Title"/>-->
    <!--<include layout="@layout/element_nav_bar_with_exit"/>-->
    <include layout="@layout/toolbar_white"/>

    <ScrollView
        android:id="@+id/content_scrollable_container"
        android:visibility="gone"
        android:layout_above="@id/next_button"
        android:layout_below="@id/nav_text"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="@dimen/default_padding_double"
            android:paddingBottom="@dimen/default_padding_double"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <include
                android:id="@+id/subtitle_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:layout_marginBottom="@dimen/default_margin_double"
                layout="@layout/view_centered_header_text"/>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/main_content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
