<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/handy_bg"
    >


    <include layout="@layout/toolbar"
        />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@+id/button_next"
        >

        <RelativeLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/info_header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_padding" />

            <com.handybook.handybook.ui.widget.FullNameInputTextView
                android:id="@+id/text_fullname"
                android:layout_below="@id/info_header_layout"
                style="@style/EditText.FullName"
                />

            <LinearLayout
                android:id="@+id/phone_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_fullname"
                >

                <TextView
                    android:id="@+id/text_phone_prefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/EditText.Last"
                    />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/cell_sep"
                    />

                <com.handybook.handybook.ui.widget.PhoneInputTextView
                    android:id="@+id/text_phone"
                    style="@style/EditText.Last.Phone"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/addr_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/phone_layout"
                >

                <com.handybook.handybook.ui.widget.StreetAddressInputTextView
                    android:id="@+id/text_street"
                    android:width="0dp"
                    android:layout_weight="2"
                    style="@style/EditText.StreetAddress" />

                <EditText
                    android:id="@+id/text_other"
                    android:width="0dp"
                    android:layout_weight="3"
                    style="@style/EditText.OtherAddress" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/city_state_zip_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/addr_layout"
                >

                <com.handybook.handybook.ui.widget.StreetAddressInputTextView
                    android:id="@+id/text_city"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    style="@style/EditText.StreetAddress.City"
                    />

                <com.handybook.handybook.ui.widget.StreetAddressInputTextView
                    android:id="@+id/text_state"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/EditText.StreetAddress.State"
                    />

                <com.handybook.handybook.ui.widget.StreetAddressInputTextView
                    android:id="@+id/text_postal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:enabled="false"
                    style="@style/EditText.StreetAddress.Postal"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/city_state_zip_container"
                android:layout_marginTop="@dimen/default_margin" />

        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@id/button_next"
        android:text="@string/next"
        style="@style/Button.Green"
        />
</RelativeLayout>
