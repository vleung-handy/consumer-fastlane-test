<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/default_padding_half"
    android:paddingEnd="@dimen/default_padding"
    android:paddingStart="@dimen/default_padding"
    android:paddingTop="@dimen/default_padding_half"
    >

    <ImageView
        android:id="@+id/state_image"
        android:layout_width="@dimen/default_icon_size_half"
        android:layout_height="@dimen/default_icon_size_half"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        tools:src="@drawable/ic_check_dark"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.3"
        android:textAppearance="@style/TextView.Medium"
        android:textColor="@color/handy_tertiary_gray"
        tools:text="Kitchen: Wipe countertops"
        />

</LinearLayout>
