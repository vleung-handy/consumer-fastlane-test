<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:padding="@dimen/default_padding"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    >

    <com.handybook.handybook.ratingflow.ui.RatingFlowFiveStarsView
        android:id="@+id/pro_review_recycler_view_item_star_rating_view"
        android:layout_width="wrap_content"
        android:clickable="false"
        android:enabled="false"
        app:starWidth="@dimen/pro_profile_review_star_size"
        app:starHeight="@dimen/pro_profile_review_star_size"
        app:starMargin="@dimen/pro_profile_review_star_margin"
        android:layout_marginBottom="@dimen/default_margin_half"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/pro_review_recycler_view_item_body_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin_half"
        tools:text="Wonderful work! Blah blah blah blah blah blah blah"
        />

    <TextView
        android:id="@+id/pro_review_recycler_review_item_date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_grey"
        tools:text="Jan 2017"
        />

</LinearLayout>