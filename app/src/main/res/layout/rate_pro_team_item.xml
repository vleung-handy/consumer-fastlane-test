<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <TextView
        android:id="@+id/rate_dialog_pro_match_header_txt"
        style="@style/TextView.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        tools:text="@string/rate_dialog_pro_match_title_add"
        />

    <com.handybook.handybook.ui.view.ImageToggleButton
        android:id="@+id/toggle_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_toggle_button_height"
        app:ripple_drawable="?android:attr/selectableItemBackground"
        app:checked_bg="@drawable/border_button_fill"
        app:unchecked_bg="@drawable/border_button_transparent"
        android:layout_marginTop="@dimen/default_margin_half"
        android:clipToPadding="false"
        android:clipChildren="false"
        />
</LinearLayout>
