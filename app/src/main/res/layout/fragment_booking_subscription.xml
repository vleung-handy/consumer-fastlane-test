<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/handy_bg"
              android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="@dimen/med_elevation"
        android:theme="@style/HandyTheme.AppBarOverlay"
        app:contentInsetStart="0dp"
        app:navigationIcon="@drawable/ic_back"
        app:subtitleTextAppearance="@style/Toolbar.SubtitleText"
        app:titleMargin="@dimen/default_margin"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        >

        <TextView
            android:id="@+id/booking_subscription_toolbar_faq"
            style="@style/TextView.NavbarAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/booking_subscription_titlebar_faq"
            android:textAllCaps="false"
            android:textSize="16sp"
            />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/booking_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clipToPadding="true"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="@string/booking_subscription_title"
                android:textColor="@color/handy_text_black"
                android:textSize="@dimen/text_size_large"
                />

            <FrameLayout
                android:id="@+id/booking_frequency_options_spinner_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                />

            <LinearLayout
                android:id="@+id/booking_subscription_option_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="18dp"
                    android:text="@string/booking_subscription_term_title"
                    android:textColor="@color/handy_text_black"
                    android:textSize="@dimen/text_size_large"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/booking_subscription_trial_cta"
                style="@style/TextView.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/default_padding"
                android:text="@string/booking_subscription_trial_cta"
                android:textColor="@color/handy_darkened_blue"
                />

            <LinearLayout
                android:id="@+id/booking_subscription_trial_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="@dimen/default_margin_half"
                android:paddingBottom="@dimen/default_padding"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible"
                >

                <TextView
                    android:id="@+id/booking_subscription_trial_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="18dp"
                    android:textColor="@color/handy_text_black"
                    android:textSize="@dimen/text_size_large"
                    tools:text="Give Handy a Try!"
                    />
                <!--There will be a radio button here-->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/next_button"
        style="@style/Button.Green"
        android:text="@string/next"
        />
</LinearLayout>
