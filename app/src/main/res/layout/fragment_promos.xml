<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/handy_bg">

    <FrameLayout
        android:id="@+id/nav_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nav_text"
            android:text="@string/promotions"
            style="@style/TextView.Navbar" />

        <RelativeLayout
            android:id="@+id/menu_button_layout"
            style="@style/MenuButtonLayout" />

    </FrameLayout>

    <Button
        android:id="@+id/apply_button"
        android:text="@string/apply"
        style="@style/Button.Green" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nav_layout"
        android:layout_above="@id/apply_button">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/default_padding">

            <EditText
                android:id="@+id/promo_text"
                android:layout_marginBottom="@dimen/default_margin"
                style="@style/EditText.Last.PromoCode" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
