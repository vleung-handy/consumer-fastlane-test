<android.support.design.widget.CoordinatorLayout
    android:id="@+id/pro_team_coordinator_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".proteam.ui.activity.ProTeamActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/pro_team_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:theme="@style/HandyTheme.AppBarOverlay"
            >

            <android.support.v7.widget.Toolbar
                android:id="@+id/pro_team_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:paddingLeft="@dimen/default_padding"
                android:theme="@style/HandyTheme.AppBarOverlay"
                android:title="@string/title_activity_pro_team"
                app:contentInsetStart="0dp"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:navigationIcon="@drawable/ic_menu"
                app:titleTextAppearance="@style/Toolbar.TitleText"
                >

                <ImageButton
                    android:id="@+id/pro_team_toolbar_questionmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/cd_pro_team_toolbar_questionmark"
                    android:padding="@dimen/default_padding"
                    android:src="@drawable/ic_pro_team_toolbar_questionmark"
                    />
            </android.support.v7.widget.Toolbar>

            <com.handybook.handybook.core.ui.view.HandyTabLayout
                android:id="@+id/pro_team_tab_layout"
                style="@style/TextView.Large"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                app:tabIndicatorColor="@color/white"
                app:tabIndicatorHeight="2dp"
                app:tabSelectedTextColor="@color/white"
                app:tabTextAppearance="@style/TextAppearance.TabText"
                app:tabTextColor="@color/handy_white_semitransparent"
                >
            </com.handybook.handybook.core.ui.view.HandyTabLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/pro_team_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/pro_team_bottom_button"
            android:layout_alignWithParentIfMissing="true"
            android:layout_below="@+id/pro_team_app_bar"
            >
        </android.support.v4.view.ViewPager>

        <Button
            android:id="@+id/pro_team_bottom_button"
            style="@style/Button.Green"
            android:layout_alignParentBottom="true"
            android:clickable="false"
            android:text="@string/save"
            />

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
