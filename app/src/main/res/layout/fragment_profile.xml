<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/handy_bg">

    <Button
        android:id="@+id/update_button"
        android:text="@string/update"
        style="@style/Button.Blue" />

    <RelativeLayout
        android:layout_above="@id/login_button"
        style="@style/ContentLayout.NoBottom">

        <TextView
            android:id="@+id/credits_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/you_have_credits"
            style="@style/TextView" />

        <com.handybook.handybook.EmailInputTextView
            android:id="@+id/name_text"
            android:layout_below="@id/credits_text"
            style="@style/EditText.Email" />

    </RelativeLayout>

</RelativeLayout>
