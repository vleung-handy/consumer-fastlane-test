<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/handy_bg"
    >

    <Button
        android:id="@+id/next_button"
        style="@style/Button.Green"
        android:text="@string/next"
        />

    <TextView
        android:id="@+id/nav_text"
        style="@style/TextView.Navbar"
        android:text="@string/confirmation"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/next_button"
        android:layout_below="@id/nav_text"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/default_margin"
            >

            <TextView
                android:id="@+id/header_text"
                style="@style/TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:freezesText="false"
                android:gravity="center"
                android:paddingLeft="@dimen/default_margin"
                android:paddingRight="@dimen/default_margin"
                android:text="@string/use_your_pwd"
                />

            <com.handybook.handybook.ui.widget.PasswordInputTextView
                android:id="@+id/password_text"
                style="@style/EditText.Last.Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/header_text"
                android:layout_marginBottom="@dimen/default_margin"
                android:visibility="gone"
                tools:visibility="visible"
                />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
