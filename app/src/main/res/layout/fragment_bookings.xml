<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".booking.ui.fragment.BookingsFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/handy_blue"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/nav_layout"
            style="@style/RelativeLayout.NavBar.Blue"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/nav_text"
                style="@style/TextView.Large"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginLeft="72dp"
                android:layout_marginStart="72dp"
                android:gravity="center_vertical"
                android:text="@string/my_bookings"
                android:textColor="@color/white"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <RelativeLayout
                android:id="@+id/menu_button_layout"
                style="@style/MenuButtonLayout"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />


            <com.handybook.handybook.ui.view.HandyTabLayout
                android:id="@+id/tab_layout"
                style="@style/TextView.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="@color/white"
                app:tabIndicatorHeight="2dp"
                app:tabSelectedTextColor="@color/white"
                app:tabTextAppearance="@style/TextAppearance.TabText"
                app:tabTextColor="@color/handy_white_semitransparent"
                android:layout_below="@id/nav_text"
                android:layout_centerInParent="true"
                >
            </com.handybook.handybook.ui.view.HandyTabLayout>

        </RelativeLayout>


        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            />

    </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_booking_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="@dimen/default_margin"
            android:src="@drawable/ic_plus_white"
            android:tag="fab"
            app:backgroundTint="@color/handy_blue"
            app:fabSize="normal"
            />
    </android.support.design.widget.CoordinatorLayout>

</FrameLayout>
