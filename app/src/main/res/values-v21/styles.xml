<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HandyTheme"
           parent="BaseTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:statusBarColor">@color/handy_darkened_blue</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:stateListAnimator">@null</item>

        <!--The default for button is all caps = false for API below 21. Explicitly declaring it
        so that it doesn't accidentally change to allCaps for API above 21. -->
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RelativeLayout.NavBar.Blue">
        <item name="android:textColor">@color/handy_white</item>
        <item name="android:background">@color/handy_blue</item>
        <item name="android:elevation">@dimen/med_elevation</item>
    </style>
    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/handy_blue_indeterminate_progress_bar</item>
    </style>
</resources>
