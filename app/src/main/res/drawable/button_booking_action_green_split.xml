<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/round_button_radius"/>
                    <stroke
                        android:width="@dimen/round_button_stroke"
                        android:color="@color/disabled"
                        />
                    <solid android:color="@color/transparent"/>
                </shape>
            </item>
            <item android:state_pressed="false">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/round_button_radius"/>
                    <solid android:color="@color/handy_green"/>
                </shape>
            </item>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/round_button_radius"/>
                    <solid android:color="@color/handy_green_pressed"/>
                </shape>
            </item>
            <item android:state_enabled="true">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/round_button_radius"/>
                    <solid android:color="@color/handy_green"/>
                </shape>
            </item>
        </selector>
    </item>
    <item android:width="60dp">
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <corners
                        android:bottomLeftRadius="@dimen/round_button_radius"
                        android:topLeftRadius="@dimen/round_button_radius"
                        />
                    <stroke
                        android:width="@dimen/round_button_stroke"
                        android:color="@color/disabled"
                        />
                    <solid android:color="@color/transparent"/>
                </shape>
            </item>
            <item android:state_pressed="false">
                <shape android:shape="rectangle">
                    <corners
                        android:bottomLeftRadius="@dimen/round_button_radius"
                        android:topLeftRadius="@dimen/round_button_radius"
                        />
                    <solid android:color="@color/handy_black_super_trans"/>
                </shape>
            </item>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <corners
                        android:bottomLeftRadius="@dimen/round_button_radius"
                        android:topLeftRadius="@dimen/round_button_radius"
                        />
                    <solid android:color="@color/handy_black_super_trans"/>
                </shape>
            </item>
            <item android:state_enabled="true">
                <shape android:shape="rectangle">
                    <corners
                        android:bottomLeftRadius="@dimen/round_button_radius"
                        android:topLeftRadius="@dimen/round_button_radius"
                        />
                    <solid android:color="@color/handy_black_super_trans"/>
                </shape>
            </item>
        </selector>
    </item>
</layer-list>

