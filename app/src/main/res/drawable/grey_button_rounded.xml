<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            android:shape="rectangle">

            <corners android:radius="@dimen/default_corner_radius_half"/>
            <solid android:color="@color/handy_tertiary_gray"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">

            <corners android:radius="@dimen/default_corner_radius_half"/>
            <solid android:color="@color/handy_tertiary_gray_trans"/>
        </shape>
    </item>
</selector>
