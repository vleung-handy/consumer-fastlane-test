<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center">
        <shape android:shape="oval">
            <size
                android:width="72dp"
                android:height="72dp"
                />

            <stroke
                android:width="2dp"
                android:color="@color/handy_blue"
                />
        </shape>
    </item>
    <item
        android:left="20dp"
        android:right="20dp"
        >
        <shape android:shape="line">
            <stroke
                android:width="2dp"
                android:color="@color/handy_blue"
                />
        </shape>
    </item>
    <item
        android:left="20dp"
        android:right="20dp"
        >
        <rotate
            android:fromDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="-90"
            >
            <shape android:shape="line"
                >
                <stroke
                    android:width="2dp"
                    android:color="@color/handy_blue"
                    />
            </shape>
        </rotate>
    </item>
</layer-list>
