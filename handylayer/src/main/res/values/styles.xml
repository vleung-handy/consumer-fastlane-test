<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme"
           parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/handy_blue</item>
        <item name="colorPrimaryDark">@color/handy_darkened_blue</item>
        <item name="colorAccent">@color/handy_service_painter</item>
        <item name="android:colorBackground">@color/handy_white</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:listDivider">@color/handy_divider_line</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="HandyTheme"
           parent="BaseTheme"/>


    <style name="ChatTheme"
           parent="HandyTheme">
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/ChatTextAppearance</item>
    </style>

    <style name="ChatTextAppearance"
           parent="android:Widget.TextView">
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>


    <style name="TextView"
           parent="android:Widget.TextView">
        <item name="android:textColor">@color/handy_text_black</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:freezesText">true</item>
    </style>

    <style name="DrawerArrowStyle"
           parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/handy_white</item>
    </style>

</resources>
